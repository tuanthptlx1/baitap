@model WebApplication1.Models.SanPham

@{
    ViewBag.Title = "Thêm sản phẩm";
}

<h2>Thêm sản phẩm mới</h2>

@using (Html.BeginForm("Add", "SanPham", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.TenSanPham)
        @Html.TextBoxFor(m => m.TenSanPham, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.MoTa)
        @Html.TextAreaFor(m => m.MoTa, new { @class = "form-control", rows = 3 })
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Gia)
        @Html.TextBoxFor(m => m.Gia, new { @class = "form-control", type = "number", step = "0.01" })
    </div>
    <div class="form-group">
        @Html.Label("Chọn ảnh từ máy")
        <input type="file" name="fileUpload" class="form-control" />
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.IDDanhMuc, "Danh mục sản phẩm")
        @Html.DropDownListFor(m => m.IDDanhMuc, (SelectList)ViewBag.IDDanhMuc, "-- Chọn danh mục --", new { @class = "form-control" })
    </div>


    <button type="submit" class="btn btn-primary">Thêm mới</button>
    <a href="@Url.Action("Index", "SanPham")" class="btn btn-secondary">Quay lại</a>
}
